<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.youandi.Youandi"
    android:background="@color/backGround">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/youandi_login"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|start"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/ic_lock_outline_black_24dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/youandi_setting"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/ic_lock_open_black_24dp" />

    <FrameLayout
        android:id="@+id/youandi_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="YOU AND I"
                android:background="@color/green"
                android:textColor="#ffff"
                android:typeface="monospace"
                android:textSize="23dp"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"/>

            <View
                android:layout_height="2dip"
                android:layout_width="fill_parent"
                android:background="@color/green"
                android:layout_marginTop="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="#ffff"

                >

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"

                    android:layout_marginBottom="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/ic_people_outline_black_24dp"
                    />
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="방번호"
                    android:textSize="20dp"
                    android:typeface="monospace"
                    android:layout_marginLeft="10dp"

                    android:textColor="@color/blue"

                    />
                <TextView
                    android:id="@+id/youandi_room_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:typeface="monospace"
                    android:textColor="@color/blue"
                    />

            </LinearLayout>
            <View
                android:layout_height="2dip"
                android:layout_width="fill_parent"
                android:background="@color/green"
                />
            <View

                android:layout_marginTop="5dp"
                android:layout_height="2dip"
                android:layout_width="fill_parent"
                android:background="@color/green"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"

                android:gravity="center_vertical"
                android:id="@+id/youandi_linear"
                android:background="#ffff"

                >
                <ImageView

                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"

                    android:layout_marginBottom="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/ic_directions_walk_black_24dp"
                    />
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="남은거리"
                    android:textSize="20dp"
                    android:typeface="monospace"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/blue"

                    />
                <TextView
                    android:id="@+id/youandi_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:typeface="monospace"
                    android:textColor="@color/blue"
                    />


            </LinearLayout>
            <View
                android:layout_height="2dip"
                android:layout_width="fill_parent"
                android:background="@color/green"
                android:layout_marginBottom="10dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:id="@+id/youandi_relative"

                android:layout_below="@id/youandi_linear"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="30dp"

                android:layout_marginTop="10dp"

                >
                <ImageView
                    android:id="@+id/youandi_arrow"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    app:srcCompat="@drawable/ic_arrow_upward_black_24dp"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>
        </LinearLayout>

    </FrameLayout>


</FrameLayout>
